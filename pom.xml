<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Zeebe Msgpack Json Path Parent</name>
  <artifactId>zb-msgpack-json-path-parent</artifactId>
  <version>0.3.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <parent>
    <groupId>io.zeebe</groupId>
    <artifactId>zb-parent</artifactId>
    <version>0.2.0</version>
    <!-- do not remove empty tag - http://jira.codehaus.org/browse/MNG-4687 -->
    <relativePath />
  </parent>

  <properties>
    <version.util>0.3.0</version.util>
  </properties>

  <modules>
    <module>msgpack-core</module>
    <module>msgpack-value</module>
    <module>json-path</module>
    <module>json-el</module>
    <module>benchmark</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.zeebe</groupId>
        <artifactId>zb-msgpack-core</artifactId>
        <version>${project.version}</version>
    </dependency>

      <dependency>
        <groupId>io.zeebe</groupId>
        <artifactId>zb-msgpack-value</artifactId>
        <version>${project.version}</version>
      </dependency>

      <dependency>
        <groupId>io.zeebe</groupId>
        <artifactId>zb-msgpack-json-path</artifactId>
        <version>${project.version}</version>
      </dependency>

	  <dependency>
        <groupId>io.zeebe</groupId>
        <artifactId>zb-util</artifactId>
        <version>${version.util}</version>
      </dependency>

      <dependency>
        <groupId>io.zeebe</groupId>
        <artifactId>zb-map</artifactId>
        <version>${version.util}</version>
      </dependency>

      <dependency>
       <groupId>io.zeebe</groupId>
       <artifactId>zb-test-util</artifactId>
       <version>${version.util}</version>
     </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    <repository>
      <id>zeebe</id>
      <name>Zeebe Repository</name>
      <url>https://app.camunda.com/nexus/content/repositories/zeebe-io/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>

    <repository>
      <id>zeebe-snapshots</id>
      <name>Zeebe Snapshot Repository</name>
      <url>https://app.camunda.com/nexus/content/repositories/zeebe-io-snapshots/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>


  <scm>
    <url>https://github.com/zeebe-io/zb-msgpack-json-path</url>
    <connection>scm:git:git@github.com:zeebe-io/zb-msgpack-json-path.git</connection>
    <developerConnection>scm:git:git@github.com:zeebe-io/zb-msgpack-json-path.git</developerConnection>
    <tag>HEAD</tag>
  </scm>
</project>
