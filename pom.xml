<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.camunda.tngp.dispatcher</groupId>
  <artifactId>dispatcher-root</artifactId>
  <version>1.0.0-alpha3</version>
  <packaging>pom</packaging>

  <parent>
    <groupId>org.camunda</groupId>
    <artifactId>camunda-release-parent</artifactId>
    <version>2.5</version>
    <!-- do not remove empty tag - http://jira.codehaus.org/browse/MNG-4687 -->
    <relativePath />
  </parent>

  <properties>
    <project.build.sourceEncoding>utf-8</project.build.sourceEncoding>
    <nexus.snapshot.repository>https://app.camunda.com/nexus/content/repositories/camunda-tngp-snapshots/</nexus.snapshot.repository>
    <nexus.release.repository>https://app.camunda.com/nexus/content/repositories/camunda-tngp/</nexus.release.repository>
    <additionalparam>-Xdoclint:none</additionalparam>
  </properties>

  <modules>
    <module>dispatcher</module>
    <module>benchmarks</module>
  </modules>
  
  <dependencyManagement>
    <dependencies>
  
      <dependency>
        <groupId>org.camunda.tngp</groupId>
        <artifactId>util</artifactId>
        <version>1.0.0-alpha5</version>
      </dependency>
      
      <dependency>
        <groupId>org.agrona</groupId>
        <artifactId>agrona</artifactId>
        <version>0.9.2</version>
      </dependency>
  
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.12</version>
      </dependency>
  
      <dependency>
        <groupId>org.mockito</groupId>
        <artifactId>mockito-all</artifactId>
        <version>1.8.5</version>
      </dependency>
  
      <dependency>
        <groupId>org.assertj</groupId>
        <artifactId>assertj-core</artifactId>
        <version>3.3.0</version>
      </dependency>
    
    </dependencies>
  </dependencyManagement>

  <profiles>
    <profile>
      <id>sonatype-oss-release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <configuration>
              <!-- skip gpg signing as the release is not pushed to maven central -->
              <skip>true</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <scm>
    <url>https://github.com/camunda-tngp/dispatcher</url>
    <connection>scm:git:git@github.com:camunda-tngp/dispatcher.git</connection>
    <developerConnection>scm:git:git@github.com:camunda-tngp/dispatcher.git</developerConnection>
    <tag>1.0.0-alpha3</tag>
  </scm>

</project>
