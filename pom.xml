<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.camunda.tngp</groupId>
  <artifactId>tngp-root</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <parent>
    <groupId>org.camunda.tngp</groupId>
    <artifactId>tngp-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <!-- do not remove empty tag - http://jira.codehaus.org/browse/MNG-4687 -->
    <relativePath />
  </parent>

  <modules>
    <module>parent</module>
    <module>broker-core</module>
    <module>qa</module>
    <module>client-java</module>
    <module>protocol-test-util</module>
    <module>protocol</module>
    <module>samples</module>
    <module>dist</module>
  </modules>

  <profiles>
    <profile>
      <id>sonatype-oss-release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <configuration>
              <!-- skip gpg signing as the release is not pushed to maven central -->
              <skip>true</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <!--
       do not remove, it is needed for resolving parent snapshot versions
       Why? See http://maven.40175.n5.nabble.com/Parent-SNAPSHOT-not-resolved-Maven-2-2-1-3-0-4-Nexus-repo-td5772374.html
  -->
  <repositories>
      <repository>
          <id>foo</id>
          <url>http//bar</url>
      </repository>
  </repositories>

  <scm>
    <url>https://github.com/camunda-tngp/camunda-tngp</url>
    <connection>scm:git:git@github.com:camunda-tngp/camunda-tngp.git</connection>
    <developerConnection>scm:git:git@github.com:camunda-tngp/camunda-tngp.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

</project>
