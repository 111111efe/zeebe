<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<sbe:messageSchema xmlns:sbe="http://www.fixprotocol.org/ns/simple/RC3" package="io.zeebe.protocol.clientapi"
  id="0" version="${protocol.version}" semanticVersion="${project.version}" description="Zeebe Protocol" byteOrder="littleEndian">
  <types>
    <composite name="messageHeader" description="Message identifiers and length of message root">
      <type name="blockLength" primitiveType="uint16" />
      <type name="templateId" primitiveType="uint16" />
      <type name="schemaId" primitiveType="uint16" />
      <type name="version" primitiveType="uint16" />
    </composite>
    <composite name="varDataEncoding">
      <type name="length" primitiveType="uint16" />
      <type name="varData" primitiveType="uint8" length="0" characterEncoding="UTF-8" />
    </composite>
    <composite name="groupSizeEncoding" description="Repeating group dimensions">
      <type name="blockLength" primitiveType="uint16" />
      <type name="numInGroup" primitiveType="uint8" semanticType="NumInGroup" />
    </composite>

    <enum name="errorCode" encodingType="uint8" semanticType="String" description="The error code of an error">
      <validValue name="MESSAGE_NOT_SUPPORTED">0</validValue>
      <validValue name="PARTITION_NOT_FOUND">1</validValue>
      <validValue name="REQUEST_WRITE_FAILURE">2</validValue>
      <validValue name="INVALID_CLIENT_VERSION">3</validValue>
      <validValue name="REQUEST_TIMEOUT">4</validValue>
      <validValue name="REQUEST_PROCESSING_FAILURE">5</validValue>
      <validValue name="INVALID_MESSAGE">6</validValue>
      <validValue name="NOT_FOUND">7</validValue>
    </enum>

    <enum name="ValueType" encodingType="uint8" description="The type of a record value">
        <validValue name="TASK">0</validValue>
        <validValue name="RAFT">1</validValue>
        <validValue name="SUBSCRIPTION">2</validValue>
        <validValue name="SUBSCRIBER">3</validValue>
        <validValue name="DEPLOYMENT">4</validValue>
        <validValue name="WORKFLOW_INSTANCE">5</validValue>
        <validValue name="INCIDENT">6</validValue>
        <validValue name="WORKFLOW">7</validValue>
        <validValue name="NOOP">8</validValue>
        <validValue name="TOPIC">9</validValue>
        <validValue name="PARTITION">10</validValue>
        <validValue name="ID">11</validValue>
    </enum>

    <enum name="ControlMessageType" encodingType="uint8" description="The type of the control message.">
        <validValue name="ADD_TASK_SUBSCRIPTION">0</validValue>
        <validValue name="REMOVE_TASK_SUBSCRIPTION">1</validValue>
        <validValue name="INCREASE_TASK_SUBSCRIPTION_CREDITS">2</validValue>
        <validValue name="REMOVE_TOPIC_SUBSCRIPTION">3</validValue>
        <validValue name="REQUEST_TOPOLOGY">4</validValue>
        <validValue name="REQUEST_PARTITIONS">5</validValue>
        <validValue name="REQUEST_WORKFLOW">6</validValue>
    </enum>

    <enum name="SubscriptionType" encodingType="uint8" description="The type of the subscription.">
        <validValue name="TASK_SUBSCRIPTION">0</validValue>
        <validValue name="TOPIC_SUBSCRIPTION">1</validValue>
    </enum>
    
    <enum name="RecordType" encodingType="uint8">
        <validValue name="EVENT">0</validValue>
        <validValue name="COMMAND">1</validValue>
        <validValue name="COMMAND_REJECTION">2</validValue>
    </enum>
    
    <enum name="Intent" encodingType="uint8">
        <validValue name="CREATE">0</validValue>
        <validValue name="CREATED">1</validValue>
        <validValue name="CREATING">2</validValue> 
        <validValue name="CREATE_COMPLETE">3</validValue>
        
        <validValue name="LOCK">4</validValue>
        <validValue name="LOCKED">5</validValue>
        
        <validValue name="COMPLETE">6</validValue>
        <validValue name="COMPLETED">7</validValue>
        
        <validValue name="EXPIRE_LOCK">8</validValue>
        <validValue name="LOCK_EXPIRED">9</validValue>
        
        <validValue name="FAIL">10</validValue>
        <validValue name="FAILED">11</validValue>
        
        <validValue name="UPDATE_RETRIES">12</validValue>
        <validValue name="RETRIES_UPDATED">13</validValue>
        
        <validValue name="CANCEL">14</validValue>
        <validValue name="CANCELED">15</validValue>
        
        <validValue name="START_EVENT_OCCURRED">16</validValue>
        <validValue name="END_EVENT_OCCURRED">17</validValue>
        <validValue name="SEQUENCE_FLOW_TAKEN">18</validValue>
        <validValue name="GATEWAY_ACTIVATED">19</validValue>
        <validValue name="ACTIVITY_READY">20</validValue>
        <validValue name="ACTIVITY_ACTIVATED">21</validValue>
        <validValue name="ACTIVITY_COMPLETING">22</validValue>
        <validValue name="ACTIVITY_COMPLETED">23</validValue>
        <validValue name="ACTIVITY_TERMINATED">24</validValue>
        
        <validValue name="UPDATE_PAYLOAD">25</validValue>
        <validValue name="PAYLOAD_UPDATED">26</validValue>
        
        <validValue name="DELETE">27</validValue>
        <validValue name="DELETED">28</validValue>
        
        <validValue name="RESOLVE">29</validValue>
        <validValue name="RESOLVE_FAILED">30</validValue>
        <validValue name="RESOLVED">31</validValue>
        
        <validValue name="VALIDATED">32</validValue>
        <validValue name="DISTRIBUTED">33</validValue>
        <validValue name="TIME_OUT">34</validValue>
        <validValue name="TIMED_OUT">35</validValue>
        
        <validValue name="SUBSCRIBE">36</validValue>
        <validValue name="SUBSCRIBED">37</validValue>
        
        <validValue name="ACKNOWLEDGE">38</validValue>
        <validValue name="ACKNOWLEDGED">39</validValue>
        
        <validValue name="GENERATED">40</validValue>
    </enum>

  </types>

  <!-- L1 General Messages 0 - 99 -->

  <sbe:message name="ErrorResponse" id="0" description="Standard error response">
    <field name="errorCode" id="1" type="errorCode" />
    <data name="errorData" id="2" type="varDataEncoding" />
  </sbe:message>

  <sbe:message name="ControlMessageRequest" id="10">
    <field name="messageType" id="1" type="ControlMessageType" />
    <field name="partitionId" id="2" type="uint16" presence="optional" /> <!-- Optional: Needs only be set if request addresses a specific partition -->
    <data name="data" id="3" type="varDataEncoding" />
  </sbe:message>

  <sbe:message name="ControlMessageResponse" id="11">
    <data name="data" id="1" type="varDataEncoding" />
  </sbe:message>

  <sbe:message name="ExecuteCommandRequest" id="20">
    <field name="partitionId" id="1" type="uint16" />
    <field name="position" id="2" type="uint64" presence="optional" /> <!-- Optional: There are requests that do not reference an existing event -->
    <field name="key" id="3" type="uint64" />
    <field name="valueType" id="4" type="ValueType" />
    <field name="intent" id="5" type="Intent" />
    <data name="value" id="6" type="varDataEncoding" />
  </sbe:message>

  <sbe:message name="ExecuteCommandResponse" id="21">
    <field name="partitionId" id="1" type="uint16" />
    <field name="position" id="2" type="uint64" />
    <field name="key" id="3" type="uint64" />
    <field name="recordType" id="4" type="RecordType" />
    <field name="intent" id="5" type="Intent" />
    <data name="value" id="6" type="varDataEncoding" />
  </sbe:message>
 
  <sbe:message name="SubscribedRecord" id="30">
    <field name="partitionId" id="1" type="uint16" />
    <field name="position" id="2" type="uint64" />
    <field name="key" id="3" type="uint64" />
    <field name="subscriberKey" id="4" type="uint64" />
    <field name="recordType" id="5" type="RecordType" />
    <field name="subscriptionType" id="6" type="SubscriptionType" />
    <field name="valueType" id="7" type="ValueType" />
    <field name="intent" id="8" type="Intent" />
    <data name="value" id="9" type="varDataEncoding" />
  </sbe:message>

  <!-- L2 Common Messages 200 - 399 -->

  <sbe:message name="RecordMetadata" id="200" description="Descriptor for Record Metadata">
    <field name="recordType" id="1" type="RecordType" />
    <field name="requestStreamId" id="2" type="int32" />
    <field name="requestId" id="3" type="uint64" />
    <field name="subscriptionId" id="4" type="uint64" />
    <field name="protocolVersion" id="5" type="uint16" />
    <field name="valueType" id="6" type="ValueType" />
    <field name="intent" id="7" type="Intent" />
    <field name="incidentKey" id="8" type="uint64" />
  </sbe:message>
  
</sbe:messageSchema>
